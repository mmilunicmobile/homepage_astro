---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";

const {
    title = "Article",
    description = "Mathum is a collection of articles written about math programming and anything inbetween. This is an article on it.",
    prev,
    next,
} = Astro.props;
---

<Layout title={`${title} - Mathum`} description={description}>
    <slot />
    <nav class="navbar">
        {
            prev !== undefined ? (
                <a href={`/article/${prev?.slug}`}>Last</a>
            ) : (
                <span>Last</span>
            )
        }
        <a href="/">Home</a>
        {
            next !== undefined ? (
                <a href={`/article/${next?.slug}`}>Next</a>
            ) : (
                <span>Next</span>
            )
        }
    </nav>
</Layout>
